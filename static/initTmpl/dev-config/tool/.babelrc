{
	"presets": [
		[
			"env",
			{
				"modules": "commonjs"
			}
		],
		"react",
        "stage-0"
	],
	"plugins": [
		"react-hot-loader/babel",
		"transform-runtime",
		"add-module-exports",
		"transform-class-properties",
		"transform-react-display-name",
        "transform-decorators-legacy"
	],
	"env": {
		"development": {
			"presets": [
				"react-hmre"
			],
			"plugins": [
				"react-hot-loader/babel"
			]
		},
		"test": {
			"plugins": [
				"transform-es2015-modules-commonjs",
				"dynamic-import-node"
			]
		}
	}
}